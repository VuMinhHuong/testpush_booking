<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <title>USERS</title>
    <style>

      td {
            word-break: break-word;
        }
        .action {
            width: 130px;
            text-align: center;
        }
        h2 {
            margin: 30px 0!important;
        }
        .password {
            width: 300px;
        }
        input {
            background-color: transparent;
            border: none;
            border-bottom: 1px solid rgb(72, 72, 72);
            /* color: white; */
            width: 100px;
        }
        input:focus {
            outline: none;
        }


    </style>
  </head>
  <body>
    <ul class="nav nav-tabs navbar-dark bg-dark">
      <li class="nav-item">
        <a class="nav-link active" aria-current="page" href="#">Users Panel</a>
      </li>
      <li class="nav-item">
        <a class="nav-link signout-btn" href="#">Logout</a>
      </li>
  </ul>
    <div class="container">
      <div class="row"><h2>User List</h2></div>
      <div class="row">
        <div class="message"></div>
      </div>
    </div>
    <div class="container">
      <div class="row">
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">ID</th>
              <th scope="col">Name</th>
              <th scope="col">Username</th>
              <th scope="col">Email</th>
              <th scope="col">Website</th>
              <th scope="col">Phone</th>
              <th scope="col">Password</th>
              <th scope="col">Action</th>
            </tr>
          </thead>
          <tbody id="tbody">
            <% for(let i = 0;i< data.length;i++) {%>
            <tr>
              <th scope="row"><%= i +1 %></th>
              <td><%=data[i].id%></td>
              <td><%=data[i].name%></td>
              <td><%=data[i].username%></td>
              <td><%=data[i].email%></td>
              <td><%=data[i].website%></td>
              <td><%=data[i].phone%></td>
              <td><%=data[i].password%></td>

              <td>
                <span id="<%=data[i].id%>" class="btn btn-danger btn-delete">DELETE</span>
                <span id="update-<%=data[i].id%>" class="btn btn-info btn-update">UPDATE</span>
              </td>
            </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </div>

    <nav aria-label="Page navigation example">
      <ul class="pagination">
        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
        <% for(let i = 1;i <= Math.ceil(total/page_size); i++) {%>
        <li class="page-item"><a class="page-link" href="/users?page_size=<%=page_size%>&page_index=<%=i%>"><%=i%></a></li>
        <% } %>
        <li class="page-item"><a class="page-link" href="#">Next</a></li>
      </ul>
    </nav>



    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script src="/js/users.js"></script>
  </body>
</html>